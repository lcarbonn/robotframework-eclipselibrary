<?xml version="1.0"?>

<project name="RobotAnt" default="robotant" basedir=".">

	<description>
        Launching TestJUnit suite
  </description>
	<property name="robotant"  value="libext/ant-robotframework-0.4.jar"/>
	<property name="robotframework"  value="libext/robotframework-2.5.5.jar"/>
	<property name="junitlibrary"  value="lib/junitlibrary-0.1-with-dependencies.jar"/>
	<!--<property name="junitlibrary"  value="lib/junitlibrary-0.1.jar"/>-->

  <taskdef name="robotant"
      classname="org.lcx.robotframework.ant.RobotAnt"
      classpath="${robotant}"/>

	<target name="robotant">
		<robotant 
        jar="${robotframework}"
        data_sources="A_TestJunitLibrary.html"
        loglevel="TRACE"
        debugfile="robotant.log"
        outputdir="results"
        maxmemory="512m"
        maxpermsize="256m"
        >
      <jvmarg line="-Xbootclasspath/a:${junitlibrary};${robotframework}"/>
      
		</robotant>
	</target>

</project>

